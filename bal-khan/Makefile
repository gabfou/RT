%.o: %.c
	gcc -c -o $@ $(FLAGS) $<

clean:
	@rm -rf $(SRC:.c=.o)

fclean: clean
	@make -C minilibx_macos clean
	@make -C gnl/libft fclean
	@rm -rf $(NAME)

re: fclean all

f: re
	./$(NAME)
